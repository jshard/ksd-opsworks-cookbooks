location /<%= @name %>/ {

    sendfile off;
    proxy_redirect off;
    proxy_buffering off;
    
    proxy_pass http://<%= @ipaddress %>:<%= @port %>/<%= @name %>/;
    
    proxy_set_header  Host             $host;
    proxy_set_header  X-Real-IP        $remote_addr;
    proxy_set_header  X-Forwarded-For  $proxy_add_x_forwarded_for;
    
    proxy_max_temp_file_size 0;
}
